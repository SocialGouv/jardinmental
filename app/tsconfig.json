{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-native", "node"],
    "strictNullChecks": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "node_modules",
    "android",
    "ios"
  ]
}
